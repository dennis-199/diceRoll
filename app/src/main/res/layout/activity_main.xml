<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/button_roll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_roll"
        android:backgroundTint="@color/teal_200"/>


    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="01dp"
        android:layout_weight="2"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="7" />
    <TextView
        android:id="@+id/counttextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="You have rolled the dice 0 times"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/newcolor"/>
    <Button
        android:id="@+id/button_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onTouch"
        android:text="@string/count_button"
        android:backgroundTint="@color/teal_200"/>


    <Button
        android:id="@+id/button_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_toast"
        android:backgroundTint="@color/teal_200"/>

</LinearLayout>